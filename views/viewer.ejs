<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Watchlist</title>
    <link rel="icon" href="/images/favicon.ico">
    <script src="/js/viewer.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex flex-column h-100">
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top permanent-marker-regular">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/images/favicon.ico" width="30" height="30" class="d-inline-block align-top" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/watchlist">Add to List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/watchlist/viewer">My List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/randomize">Randomizer</a>
                        </li>
                    </ul>
                    <span class="navbar-text d-flex align-items-center">
                        <% if (username) { %>
                            <span class="me-2">[ <%= username %> ]</span>
                            <form action="/auth/logout" method="post" class="d-inline">
                                <button class="btn btn-outline-danger btn-sm" type="submit" name="Logout"
                                    value="Logout">Logout</button>
                            </form>
                            <% } else { %>
                                <a href="/auth/login" class="btn btn-primary btn-sm">Log in / Sign up</a>
                                <% } %>
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <main class="inner cover container flex-shrink-0" role="main">
        <div class="row justify-content-center">
            <!-- Pills navs -->
            <div class="d-flex justify-content-center w-100">
                <ul class="nav nav-fill nav-tabs flex-grow-1 flex-lg-grow-0 fixed top" id="tabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active permanent-marker-regular custom-tab" id="movie-tab"
                            data-bs-toggle="tab" href="#movie-tabpanel" role="tab" aria-controls="movie-tabpanel"
                            aria-selected="true">Movies</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link permanent-marker-regular custom-tab" id="tv-tab" data-bs-toggle="tab"
                            href="#tv-tabpanel" role="tab" aria-controls="tv-tabpanel" aria-selected="false">TV
                            Shows</a>
                    </li>
                </ul>
            </div>
            <!-- Pills navs -->

            <!-- Table container -->
            <div class="col-12 col-xl-10"> <!-- Adjust column width for responsiveness -->
                <div class="table-container">
                    <div class="tab-content pt-5" id="tab-content">
                        <div class="tab-pane active row g-1 mt-1" id="movie-tabpanel" role="tabpanel"
                            aria-labelledby="movie-tab">
                            <ul>
                                <% if (movies && movies.length> 0) { %>
                                    <div id="" class="mt-4">
                                        <table class="table table-striped table-hover permanent-marker-regular">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th class="col-sm-8">Title</th>
                                                    <th class="col-sm-2">Year</th>
                                                    <th class="text-end col-sm-2">Remove?</th>
                                                </tr>
                                            </thead>
                                            <tbody class="">
                                                <% movies.forEach(function(movie) { %>
                                                    <tr>
                                                        <td>
                                                            <%= movie.title %>
                                                        </td>
                                                        <td>
                                                            <%= movie.year %>
                                                        </td>
                                                        <td class="text-end">
                                                            <button
                                                                class="btn btn-outline-danger btn-sm remove-button permanent-marker-regular"
                                                                data-id="<%= movie.id %>"
                                                                data-type="movie">Remove</button>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <p>No movies in your watchlist.</p>
                                        <% } %>
                            </ul>
                        </div>

                        <div class="tab-pane" id="tv-tabpanel" role="tabpanel" aria-labelledby="tv-tab">
                            <ul>
                                <% if (tvShows && tvShows.length> 0) { %>
                                    <table class="table table-striped table-hover w-100 permanent-marker-regular">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Year</th>
                                                <th class="text-end">Remove?</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% tvShows.forEach(function(tvShow) { %>
                                                <tr>
                                                    <td>
                                                        <%= tvShow.title %>
                                                    </td>
                                                    <td>
                                                        <%= tvShow.year %>
                                                    </td>
                                                    <td class="text-end">
                                                        <button
                                                            class="btn btn-outline-danger btn-sm remove-button permanent-marker-regular"
                                                            data-id="<%= tvShow.id %>" data-type="tv">Remove</button>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No TV shows in your watchlist.</td>
                                        </tr>
                                        <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="footer fixed-bottom mt-auto py-3">
        <div class="container">
            <span class="permanent-marker-regular">Created by Damien Barrett for NCIRL College Project 2024</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>
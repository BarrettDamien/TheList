<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watchlist</title>
    <script src="watchlist.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">WYW</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>  
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/watchlist">Watchlist</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/randomize">Randomizer</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    [ <%= username %> ] 
                </span>
                <form action="/auth/logout" method="post" class="d-flex">
                    <button class="btn btn-outline-success" type="submit" name="Logout" value = "Logout">Logout</button>
                </form>
                </div>
            </div>
        </nav>

        <% if (user) { %>
            <p hidden>Welcome, <%= user.username %>!</p>
            <p hidden>Your User ID is: <%= user.id %></p>
            <script>
                const userId = '<%= JSON.stringify(user.id) %>'; // Embed the user ID from the server-side EJS rendering
                console.log("User ID:", userId);
            </script>
        <% } else { %>
            <p>Please log in to see your watchlist.</p>
        <% } %>

        <!-- Pills navs -->
        <ul class="nav nav-fill nav-tabs" id="tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="movie-tab" data-bs-toggle="tab" href="#movie-tabpanel" role="tab" aria-controls="movie-tabpanel" aria-selected="true">Movies</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="tv-tab" data-bs-toggle="tab" href="#tv-tabpanel" role="tab" aria-controls="tv-tabpanel" aria-selected="false">TV Shows</a>
            </li>
        </ul>
        <!-- Pills navs -->

        <!-- Pills content -->
        <div class="tab-content pt-5" id="tab-content">
            <div class="tab-pane active" id="movie-tabpanel" role="tabpanel" aria-labelledby="movie-tab">
                <h3 hidden>Search for Movies</h3>
                <input type="text" id="movie-search-input" placeholder="Enter movie title">
                <button id="movie-search-button">Search</button>    
                <div id="movie-search-results"></div>
            </div>

            <div class="tab-pane" id="tv-tabpanel" role="tabpanel" aria-labelledby="tv-tab">
                <h3 hidden>Search for TV Shows</h3>
                <input type="text" id="tv-search-input" placeholder="Enter tv show title">
                <button id="tv-search-button">Search</button>
                <div id="tv-search-results"></div>
            </div>
        </div>
        <!-- Pills content -->


        <h1 hidden>Add API References below</h1>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>          
    </body>
</html>